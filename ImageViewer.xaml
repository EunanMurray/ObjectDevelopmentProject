<Window x:Class="Project1.ImageViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Viewer" WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Grid>
        <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" MaxHeight="1080" MaxWidth="1920">
            <Image x:Name="FullSizeImage" Stretch="Uniform" 
                   MaxHeight="1080" MaxWidth="1920"/>
        </Viewbox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button x:Name="PreviousButton" Content="Previous" Margin="5" Click="PreviousButton_Click"/>
            <Button x:Name="NextButton" Content="Next" Margin="5" Click="NextButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
